doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Asset Management System
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css")

  body
    //- Navbar
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container
        a.navbar-brand(href="#") Asset Management System
        button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarNav
          ul.navbar-nav.ml-auto
            li.nav-item
              a.nav-link(href="/") assets
            li.nav-item
              a.nav-link(href="/assets") Assets
            li.nav-item
              a.nav-link(href="/assetcategory") Asset Categories
            li.nav-item
              a.nav-link(href="/assethistory") Asset History

block content
  
  .container.mt-4
    if success_msg
      .alert.alert-success= success_msg
    if error_msg
      .alert.alert-danger= error_msg
    .container
    .col.text-end
      a.nav-link(href='/assets/add')
        button.btn.btn-success Add
    .text-center
      a.nav-link(href='/assets/getStockView')
        button.btn.btn-success Get Stock View
        
  .container.mt-4
    h1 View assets
    table.table.table-bordered
      thead
        tr
          th Serial Number
          th Branch
          th Value
          th Employee ID
          th Status
      tbody
        each asset in assets
          tr
            td= asset.serialNumber
            td= asset.branch
            td= asset.value 
            td= asset.employeeId
            td= asset.status

            td
              a.btn.btn-warning(href="/assets/" + asset.id + "/edit") Edit 
              form(action="/assets/"+asset.id+"?_method=DELETE", method="POST")
                  button.btn.btn-danger(type="submit") Delete