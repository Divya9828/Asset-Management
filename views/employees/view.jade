doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Asset Management System
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css")

  body
    //- Navbar
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container
        a.navbar-brand(href="#") Asset Management System
        button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarNav
          ul.navbar-nav.ml-auto
            li.nav-item
              a.nav-link(href="/") Employees
            li.nav-item
              a.nav-link(href="/assets") Assets
            li.nav-item
              a.nav-link(href="/assetscategory") Asset Categories
            li.nav-item
              a.nav-link(href="/assethistory") Asset History

block content
  
  .container.mt-4
    if success_msg
      .alert.alert-success= success_msg
    if error_msg
      .alert.alert-danger= error_msg
    .container
    .col.text-end
      a.nav-link(href='/employees/add')
        button.btn.btn-success Add
  .container.mt-4
    h1 View Employees
    table.table.table-bordered
      thead
        tr
          th Name
          th Email
          th Position
          th Actions
      tbody
        each employee in employees
          tr
            td= employee.firstName
            td= employee.email
            td= employee.position
            td
              a.btn.btn-warning(href="/employees/" + employee.id + "/edit") Edit 
              form(action="/employees/"+employee.id+"?_method=DELETE", method="POST")
                  button.btn.btn-danger(type="submit") Delete